modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
POSTGRES_HOST = "helium"
POSTGRES_PORT = "5432"
POSTGRES_DATABASE = "heliumdb"
POSTGRES_USER = "postgres"
POSTGRES_PASSWORD = "password"
POSTGRES_SYNCHRONIZE = "true"
PORT = "5000"
FRONTEND_URL = "https://www.rotgo.com.br"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
